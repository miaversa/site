{% extends "base.html.twig" %}

{% set page_metatitle = "Blog da #{site.name}" %}
{% set page_metadescription = 'saiba o que estamos fazendo no dia a dia aqui no blog' %}

{% set ogtype='blogindex' %}

{% block main %}
<div class="mw9 center ph3-ns">
<div class="cf ph2-ns">

	<main class="fl w-100 w-80-l pa2">
	{% for p in posts %}
		<h2><a class="link underline-hover light-red" href="{{urls.relativePostURL(p)}}" title="{{p.description}}">{{ p.title }}</a></h2>
		{{ p.summary|raw }}
		<p><a class="link underline-hover light-red" href="{{urls.relativePostURL(p)}}" title="{{p.description}}">continue lendo este post...</a></p>
	{% endfor %}
	</main>

	<aside class="fl w-100 w-20-l pa2">
