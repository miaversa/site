{% extends "base.html.twig" %}

{% set page_metatitle = "Blog da #{site.name}" %}
{% set page_metadescription = 'saiba o que estamos fazendo no dia a dia aqui no blog' %}

{% set ogtype='blogindex' %}

{% block main %}
<div class="mw8 center ph2 ph3-ns ph5-l">
<div class="cf">

	<main class="fl w-100 w-80-l">
	{% for p in posts %}
		<h2><a class="link underline-hover purple hover-light-purple" href="{{urls.relativePostURL(p)}}" title="{{p.description}}">{{ p.title }}</a></h2>
		{{ p.summary|raw }}
		<p><a class="link underline-hover purple hover-light-purple" href="{{urls.relativePostURL(p)}}" title="{{p.description}}">continue lendo este post...</a></p>
	{% endfor %}
	</main>

	<aside class="fl w-100 w-20-l">
		<h3>Posts por Data:</h3>
		<ol class="list nested-list-reset">
			<li><a class="link underline-hover purple hover-light-purple" href="">2019</a>
				<ol class="mb4">
					<li class="pl3 lh-copy"><a class="link underline-hover purple hover-light-purple" href="">Mar / 2019</a></li>
					<li class="pl3 lh-copy"><a class="link underline-hover purple hover-light-purple" href="">Fev / 2019</a></li>
					<li class="pl3 lh-copy"><a class="link underline-hover purple hover-light-purple" href="">Jan / 2019</a></li>
				</ol>
			</li>
			<li><a class="link underline-hover purple hover-light-purple" href="">2019</a></li>
			<li><a class="link underline-hover purple hover-light-purple" href="">2019</a></li>
		</ol>
	</aside>

</div>
</div>
{% endblock %}
