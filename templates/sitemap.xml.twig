<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">

<url><loc>{{site.url()}}</loc><priority>1</priority></url>

<!-- products -->
{% for product in products -%}
	<url><loc>{{site.productURL(product)}}</loc><priority>0.8</priority></url>
{% endfor %}

<!-- pages -->
{% for page in pages -%}
	<url><loc>{{site.pageURL(page.slug)}}</loc><priority>0.7</priority></url>
{% endfor %}

<!-- posts -->
<url><loc>{{site.blogURL()}}</loc><priority>1</priority></url>
{% for post in posts -%}
	<url><loc>{{site.postURL(post.slug)}}</loc><priority>0.7</priority></url>
{% endfor %}

</urlset>
