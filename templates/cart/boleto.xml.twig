<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<payment>
	<mode>default</mode>
	<currency>BRL</currency>
	<receiverEmail>daniela@miaversa.com.br</receiverEmail>
	<method>boleto</method>
	
	<sender>
		<hash>{{hash}}</hash>
		<name>{{user.name}}</name>
		<email>{{user.email}}</email>
		<phone>
			<areaCode>61</areaCode>
			<number>985632143</number>
		</phone>
		<documents>
			<document>
				<type>CPF</type>
				<value>65017377530</value>
			</document>
		</documents>
		<bornDate>01/01/1986</bornDate>
	</sender>
	
	<items>
{% for item in cart.items %}
		<item>
			<id>{{item.product.sku}}</id>
			<description>{{item.product.name}}</description>
			<amount>{{item.product.price|number_format(2, '.', '')}}</amount>
			<quantity>1</quantity>
		</item>
{% endfor %}
	</items>
	
	<shipping>
		<address>
			<street>{{user.shipping.address.street}}</street>
			<number>{{user.shipping.address.number}}</number>
			<complement>{{user.shipping.address.complement}}</complement>
			<district>{{user.shipping.address.district}}</district>
			<city>{{user.shipping.address.city}}</city>
			<state>{{user.shipping.address.state}}</state>
			<country>{{user.shipping.address.country}}</country>
			<postalCode>{{user.shipping.address.postalCode}}</postalCode>
		</address>
		<type>1</type>
		<cost>1.00</cost>
		<addressRequired>true</addressRequired>
	</shipping>
		
	<dynamicPaymentMethodMessage>
		<boleto>Miaversa</boleto>
	</dynamicPaymentMethodMessage>
</payment>
